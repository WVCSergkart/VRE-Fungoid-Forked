		</modExtensions>
	</GeneDef>
	<GeneDef>
		<defName>VRE_SkillDegradation</defName>
		<label>skill degradation</label>
		<description>Carriers of this gene suffer from forgetting skills regardless of their current skill level.</description>
		<iconPath>UI/Icons/Genes/Gene_SkillDegradation</iconPath>
		<displayCategory>VRE_SkillLoss</displayCategory>
		<displayOrderInCategory>5004</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>2</biostatMet>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<skillDegradation>true</skillDegradation>
			</li>
		</modExtensions>
	</GeneDef>
