	<GeneDef>
		<defName>VRE_NoSkillLoss</defName>
		<label>no skill loss</label>
		<description>Carriers of this gene do not suffer from forgetting skills.</description>
		<iconPath>UI/Icons/Genes/Gene_SkillLossNone</iconPath>
		<displayCategory>VRE_SkillLoss</displayCategory>
		<displayOrderInCategory>5003</displayOrderInCategory>
