<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef>
		<defName>VRE_ExtremeSkillLoss</defName>
		<label>extreme skill loss</label>
		<description>Carriers of this gene forget skills twice as fast.</description>
		<iconPath>UI/Icons/Genes/Gene_SkillLossExtreme</iconPath>
		<displayCategory>VRE_SkillLoss</displayCategory>
		<displayOrderInCategory>5000</displayOrderInCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>4</biostatMet>
		<exclusionTags>
			<li>VRE_SkillGenes</li>
			<li>VRE_Curiosity</li>
			<li>Curiosity</li>
			<li>SkillGenes</li>
		</exclusionTags>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<globalSkillLossMultiplier>2</globalSkillLossMultiplier>
			</li>
		</modExtensions>
	</GeneDef>
	<GeneDef>
		<defName>VRE_SevereSkillLoss</defName>
